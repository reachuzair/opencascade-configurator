// Prisma Schema for Open Cascade Configurator

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Products table - stores dynamic product catalog
model Product {
  id                Int              @id @default(autoincrement())
  name              String           @db.VarChar(100)
  description       String?          @db.Text
  category          String?          @db.VarChar(50)
  scriptName        String           @map("script_name") @db.VarChar(100)
  parametersSchema  Json             @map("parameters_schema")
  thumbnailUrl      String?          @map("thumbnail_url") @db.VarChar(500)
  isActive          Boolean          @default(true) @map("is_active")
  sortOrder         Int              @default(0) @map("sort_order")
  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")
  
  configurations    Configuration[]
  
  @@map("products")
}

// Configurations table - stores user-generated models
model Configuration {
  id          Int       @id @default(autoincrement())
  userId      Int?      @map("user_id")
  productId   Int       @map("product_id")
  name        String    @db.VarChar(100)
  modelType   String    @default("box") @map("model_type") @db.VarChar(100)
  parameters  Json
  stepFile    String?   @map("step_file") @db.VarChar(500)
  stlFile     String?   @map("stl_file") @db.VarChar(500)
  dxfFile     String?   @map("dxf_file") @db.VarChar(500)
  pdfFile     String?   @map("pdf_file") @db.VarChar(500)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  product     Product   @relation(fields: [productId], references: [id])
  revisions   Revision[]
  
  @@map("configurations")
}

// Revisions table - tracks configuration history
model Revision {
  id              Int           @id @default(autoincrement())
  configurationId Int           @map("configuration_id")
  version         Int
  changes         String?       @db.Text
  createdAt       DateTime      @default(now()) @map("created_at")
  
  configuration   Configuration @relation(fields: [configurationId], references: [id])
  
  @@map("revisions")
}
